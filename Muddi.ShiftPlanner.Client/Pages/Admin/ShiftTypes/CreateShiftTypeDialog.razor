@inherits UpdateDialogBase<GetShiftTypesResponse>
<div class="row">
    <div class="col-md-4 align-items-center d-flex">
        <RadzenLabel Text="Name"/>
    </div>
    <div class="col-md-8">
        <RadzenTextBox @bind-Value="EntityToEdit.Name" Placeholder="Name"></RadzenTextBox>
    </div>
</div>

<div class="row">
    <div class="col-md-12 text-right">
        <RadzenButton Click="@((args) => DialogService.Close(false))" ButtonStyle="ButtonStyle.Secondary" Text="Abbrechen" Style="width: 120px" Class="mr-1"/>
        <RadzenButton Click="Create" Text="OK" Style="width: 120px"/>
    </div>
</div>

@code {

    protected override Task Create()
        => ShiftApi.ShiftTypesCreate(new() { Name = EntityToEdit.Name });

    protected override Task Update()
        => ShiftApi.ShiftTypesUpdate(EntityToEdit);

}